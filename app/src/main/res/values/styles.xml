<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_deep_teal_500</item>
        <item name="colorPrimaryDark">@color/material_deep_teal_700</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="GeneralButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/material_deep_teal_200</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:shadowColor">@color/grey_shadow</item>
    </style>

    <style name="CapstoneButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/button_layout_width</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/material_orange_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:shadowColor">@color/grey_shadow</item>
    </style>
</resources>
